
<div class="flex-container flex-row">
    <div class="toggle-wrapper">
        <label>
            <Input @type="checkbox" @change={{action toggleCardLayout}} >View as table</Input>
            <span class="toggle-background"></span>
            Toggle table view
        </label>
    </div>
</div>

<div class="flex-container flex-row">
    {{#if cardsOn}}
            {{#each limitedModel as |item|}}
                {{#if isClip}}
                    <ModelCard::ClipCard @clip={{item}} @modelType={{@modelType}} @tags={{@tags}} @addTag={{@addTag}} @removeTag={{@removeTag}} />
                {{/if}}

                {{#if isVod}}
                    <ModelCard::VodCard @vod={{item}} @modelType={{@modelType}} @tags={{@tags}} @addTag={{@addTag}} @removeTag={{@removeTag}} />
                {{/if}}
            {{/each}}
    {{else}}
        <table>
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Broadcaster</td>
                    <td>Views</td>
                    <td>Link</td>
                </tr>
            </thead>
            <tbody>
                {{#each limitedModel as |item|}}
                    {{#if isClip}}
                        <tr>
                            <td>{{item.title}}</td>
                            <td>{{item.broadcaster}}</td>
                            <td>{{item.views}}</td>
                            <td>{{item.url}}</td>
                        </tr>
                    {{/if}}

                    {{#if isVod}}
                        <tr>
                            <td>{{item.title}}</td>
                            <td>{{item.date}}</td>
                            <td>{{item.views}}</td>
                            <td>{{item.url}}</td>
                        </tr>
                    {{/if}}
                {{/each}}
            </tbody>
        </table>
    {{/if}}    
</div>
