<div id="main-content">
    <form>
        <h3>Create a new category</h3>
        <div class="form-group">
            <label for="category-name">Category name:</label>
            <input type="text" value={{this.name}} onchange={{action this.updateName value="target.value"}} id="category-name">
        </div>

        <div class="form-group">
            <label for="category-description">Category description:</label>
            <input type="text" value={{this.description}} onchange={{action updateDescription value="target.value"}} id="category-description">
        </div>
        
        <button onclick={{action postCategoryToAPI}}>Send it!</button>
    </form>
</div>